<ul>
  <% @tasks.each do |task| %>
    <li> 
    <%= link_to task.name, task_path(task) %>
    <%= link_to task_path(task), method: :delete,
    data: { confirm: "Are you sure?" } do %>
    <i class="far fa-trash-alt"></i>
    <% end %>
   </li>
  <% end %>
</ul>

<%= link_to "Create a new task", tasks_new_path %>
